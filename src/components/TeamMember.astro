---
import { Image } from "astro:assets";
import type { TeamMember } from "./TeamMemberList.astro";

type Props = TeamMember;

const { name, username, avatar, description, githubProfile } = Astro.props;
---

<section class="not-content team-member">
  <div class="team-member-header">
    <Image src={avatar} alt={`${name}'s profile picture.`} class="avatar" />
    <div>
      <h3>{name}</h3>
      <h4>{username}</h4>
    </div>
  </div>
  {description}
</section>

<style>
  .team-member {
    flex: 1;
    border: 1px solid var(--sl-color-gray-5);
    padding: clamp(1rem, calc(0.125rem + 3vw), 1.5rem);
  }

  .team-member-header {
    display: flex;
    gap: clamp(0.5rem, calc(0.125rem + 1vw), 1rem);
    margin-bottom: 1rem;
  }

  .team-member-header h3 {
    color: var(--sl-color-white);
    font-size: var(--sl-text-h3);
    line-height: var(--sl-line-height-headings);
  }

  .team-member-header h4 {
    color: var(--sl-color-gray-3);
    font-size: var(--sl-text-h4);
    line-height: var(--sl-line-height-headings);
    margin-top: 0;
  }

  .avatar {
    border-radius: 50%;
    width: 64px;
    height: 64px;
  }
</style>
